<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/route_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/route_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/points"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route_date_value" />

    <TextView
        android:id="@+id/route_points_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toEndOf="@id/route_points_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/route_points_label" />

    <TextView
        android:id="@+id/route_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        app:layout_constraintStart_toStartOf="@id/route_points_label"
        app:layout_constraintTop_toBottomOf="@id/route_points_value" />

    <TextView
        android:id="@+id/route_start_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toEndOf="@id/route_start_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/route_start_label" />

    <TextView
        android:id="@+id/route_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end"
        app:layout_constraintLeft_toLeftOf="@id/route_points_label"
        app:layout_constraintTop_toBottomOf="@id/route_start_label" />

    <TextView
        android:id="@+id/route_end_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toEndOf="@id/route_end_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/route_end_label" />

    <TextView
        android:id="@+id/route_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@id/route_points_label"
        app:layout_constraintTop_toBottomOf="@id/route_end_label"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/route_status_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toEndOf="@id/route_status_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/route_status_label" />

</androidx.constraintlayout.widget.ConstraintLayout>