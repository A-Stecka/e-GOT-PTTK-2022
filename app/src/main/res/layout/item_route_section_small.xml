<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/start_label_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_value_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/start_label_small"
        app:layout_constraintStart_toEndOf="@id/start_label_small"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/end_label_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/end"
        app:layout_constraintStart_toStartOf="@id/start_label_small"
        app:layout_constraintTop_toBottomOf="@id/start_value_small" />

    <TextView
        android:id="@+id/end_value_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/end_label_small"
        app:layout_constraintStart_toEndOf="@id/end_label_small"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_label_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/time_label"
        app:layout_constraintStart_toStartOf="@id/start_label_small"
        app:layout_constraintTop_toBottomOf="@id/end_value_small"/>

    <TextView
        android:id="@+id/time_value_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="@id/time_label_small"
        app:layout_constraintStart_toEndOf="@id/time_label_small" />

    <TextView
        android:id="@+id/time_unit_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/minutes"
        app:layout_constraintTop_toTopOf="@id/time_value_small"
        app:layout_constraintStart_toEndOf="@id/time_value_small"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>