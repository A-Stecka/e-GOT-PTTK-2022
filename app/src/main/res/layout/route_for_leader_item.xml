<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_tourist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_route_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/item_tourist_name"
        app:layout_constraintStart_toStartOf="@id/item_tourist_name" />

    <TextView
        android:id="@+id/item_confirm_route_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/start"
        app:layout_constraintStart_toStartOf="@id/item_tourist_name"
        app:layout_constraintTop_toBottomOf="@id/item_route_date" />

    <TextView
        android:id="@+id/item_confirm_route_start_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="@id/item_confirm_route_start_label"
        app:layout_constraintStart_toEndOf="@id/item_confirm_route_start_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_confirm_route_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end"
        app:layout_constraintStart_toStartOf="@id/item_confirm_route_start_label"
        app:layout_constraintTop_toBottomOf="@id/item_confirm_route_start_value" />

    <TextView
        android:id="@+id/item_confirm_route_end_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="@id/item_confirm_route_end_label"
        app:layout_constraintStart_toEndOf="@id/item_confirm_route_end_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_confirm_route_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/points"
        app:layout_constraintStart_toStartOf="@id/item_confirm_route_start_label"
        app:layout_constraintTop_toBottomOf="@id/item_confirm_route_end_value" />

    <TextView
        android:id="@+id/item_confirm_route_points_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="@id/item_confirm_route_points_label"
        app:layout_constraintStart_toEndOf="@id/item_confirm_route_points_label"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_confirm_route_mountain_group_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mountain_group"
        app:layout_constraintStart_toStartOf="@id/item_confirm_route_start_label"
        app:layout_constraintTop_toBottomOf="@id/item_confirm_route_points_value" />

    <TextView
        android:id="@+id/item_confirm_route_mountain_group_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/item_confirm_route_mountain_group_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_confirm_route_mountain_group_label"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>